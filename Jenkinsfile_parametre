pipeline {

  agent any

parameters {

  string(name: 'NOM', description: 'Indiquez votre nom')

  string(name: 'PRENOM', description: 'Indiquez votre prenom')

  choice(name:'MOIS_EN_COURS', choices: ['Janvier', 'Fevrier', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Aout', 'Septembre', 'Octobre', 'Novembre', 'Decembre'], description: 'Selectionnez le mois actuel')

  string(name:'DATE', description : 'Indiquez la date du jour (Si 2 janvier ecrire 2)')

  choice(name: 'CHALLENGES_RESOLUTIONS', choices: ["Janvier : Faire un grand nettoyage", "Janvier : Se debarasser des objets inutiles", "Fevrier : Apprendre un instrument", "Fevrier : Apprendre le solfege", "Mars : Lire un livre", "Mars : Aller voir un film au cinema", "Avril : Essayer de stopper ses addictions", "Avril : Commencer a faire du jogging", "Mai : Passer du temps avec ses proches", "Mai : Apprendre un sport", "Juin : Ecrire un livre", "Juin : Se reposer", "Juillet : Faire la fete", "Juillet : Visiter le monde", "Aout : Profiter de son entourage", "Aout : Prendre du temps pour soi", "Septembre : Redoubler d'efforts", "Septembre : Se coucher plus tot", "Octobre : Optimiser ses journees", "Octobre : Prendre des vacances", "Novembre : Faire des economies", "Novembre : Apprendre de nouvelles competences", "Decembre : Faire des sorties", "Decembre : Demander une augmentation"], description: 'Selectionnez votre challenge')
}

stages {
    stage ('Formulaire') {
        steps {
            script {
                def prenon = "${params.PRENOM}"
                def nom = "${params.NOM}"
                echo "$prenom, bienvenue sur l'application qui va vous permettre de realiser vos souhaits"
                sleep 10
        }
    }
}
stage ('Janvier') {
    steps {
        script {
            def challenges = "${params.CHALLENGES_RESOLUTIONS}"
            def today = "${params.DATE}"
            def mois = "${params.MOIS_EN_COURS}"

            if (mois == "Janvier" && today == '1') {
                challenges = "Faire un grand nettoyage, Se debarasser des objets inutiles"
                echo "Nous sommes en $mois"
                echo "challenges disponibles ce mois : $challenges"
                sleep 5
            }
            else if (mois == "Janvier" && today == '31') {
                echo "Challenge du mois termine"
                echo "Le mois est termine ! Bravo pour avoir accompli tous vos challenges !"
                sleep 5
            }
         }
       }
     }

